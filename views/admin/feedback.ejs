<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Feedback</title>
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <header>
    <h1>Feedback Dashboard</h1>
  </header>

  <main>
    <div class="container">
      <nav>
        <ul>
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li><a href="/">Home</a></li>
        </ul>
      </nav>
      <h2>All Feedback</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% feedbacks.forEach(feedback => { %>
          <tr>
            <td><%= feedback.name %></td>
            <td><%= feedback.email %></td>
            <td><%= feedback.message %></td>
            <td><%= new Date(feedback.date).toLocaleString() %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </main>

  <footer>
    <p>&copy; 2024 Glamorous Admin Panel</p>
  </footer>
</body>
</html>
